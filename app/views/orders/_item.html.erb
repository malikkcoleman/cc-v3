<ul>
      <li>
        <%= link_to "cart", "/shop"%>
        <% if cart.present? %>
          <% total = 0%>
          <sup><%= cart.size %></sup>
          <ul>
            <% cart.each do |p| %>
              <li>
                <%= p.name%> ----- <%= p.price%> -----<%= button_to cart_path(p.id), method: :delete do%> Remove from cart - <% end %>
                <% total = total + p.price%>
              </li>
            <% end %>
          Total is <%= total %>
          </ul>
        <% end %>
    </ul>
<h2>Information</h2>

<%= form_with url: create_order_path, local: true, method:  :post do |f| %>
    Full Name: <%= f.text_field :name %>
    Province: <%= f.select(:province, ['AB', 'BC', 'MB', 'NB', 'NL', 'NT', 'NS', 'NU', 'ON', 'PE', 'QC', 'SK', 'YT' ]) %>
    <%= hidden_field_tag(:total, total) %>
    <p>Taxes calculated after purchase</p>
    Total: <%= total %>
    <%= f.submit 'BUY' %>
<% end %>