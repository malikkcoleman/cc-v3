<div class="container">
<% @product.each do |item| %>

<div class="d-flex-column justify-content-center">
<div class="m-r-5">
  <div>
    <img class="img-fluid" src="<%= item.image%>" alt="Card image cap" >
  </div>
</div>

<div class="m-5">
  <h3><%= item.name%></h3>
  <p><%= item.description%></p>
  <p>$<%= item.price %></p>
  <p>QTY: <%= item.qty %></p>

    <% if cart.include?(item) %>
      <%= button_to cart_path(item) , method: :delete, class: "btn btn-primary mt-2" do%>
      - Remove from cart
      <% end %>
    <% else %>
      <%= form_with url: cart_index_path, method: :post do%>
        <%= hidden_field_tag(:id, item.id) %>
        <%= button_tag '+ Add to Cart', class: "btn btn-primary mt-2"%>
      <% end %>
    <% end%>
  </div>
</div>




<%end%>
</div>

