<% @product.each do |item| %>

<div class="d-flex justify-content-center">
<div class="m-r-5">
  <div>
    <img class="img-fluid" src="<%= item.image%>" alt="Card image cap" width="100" height="300">
  </div>
</div>

<div class="m-5">
  <h3><%= item.name%></h3>
  <p><%= item.description%></p>
  <p><%= item.price %></p>
  <p>QTY: <%= item.qty %></p>
  <button style="text-align: center" type="button" class="btn btn-outline-primary">Add to Card</button>

</div>
</div>

<%end%>

